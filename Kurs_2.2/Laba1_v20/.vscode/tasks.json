{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/*.cpp",
                "-g",
                "${workspaceFolder}/Loaders/*.cpp",
                "-g",
                "${workspaceFolder}/Products/*.cpp",
                "-g",
                "${workspaceFolder}/UI/*.cpp",
                "-g",
                "${workspaceFolder}/UI/Commands/*.cpp",
                "-g",
                "${workspaceFolder}/Utils/*.cpp",
                "-o",
                "${workspaceFolder}/.build/laba1",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: g++"
        }
    ]
}